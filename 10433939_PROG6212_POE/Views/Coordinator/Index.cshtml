@model List<_10433939_PROG6212_POE.Models.Claim>

@{
	ViewBag.Title = "Coordinator Dashboard";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="text-bg-secondary">
	<nav class="mb-4">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="/">Home</a></li>
		<li class="breadcrumb-item active">Academic Coordinator</li>
	</ol>
</nav>
<div class="d-flex justify-content-between align-items-center mb-4">
	<h2>Academic Coordinator</h2>
</div>
</body>
<ul class="nav nav-bar mb-4">
	<li class="nav-item">
		<a class="nav-link @(ViewBag.Filter == "all" ? "active" : "")" href="/Coordinator?filter=all">
			All Claims (@Model.Count)
		</a>
	</li>
	<li class="nav-item">
		<a class="nav-link @(ViewBag.Filter == "pending" ? "active" : "")" href="/Coordinator?filter=pending">
			Pending (@ViewBag.PendingCount)
		</a>
	</li>
	<li class="nav-item">
		<a class="nav-link @(ViewBag.Filter == "declined" ? "active" : "")" href="/Coordinator?filter=declined">
			Declined (@ViewBag.DeclinedCount)
		</a>
	</li>
	<li class="nav-item">
		<a class="nav-link @(ViewBag.Filter == "verified" ? "active" : "")" href="/Coordinator?filter=verified">
			Verified (@ViewBag.VerifiedCount)
		</a>
	</li>
</ul>
<!--Nav to filter tables-->
<ul class="nav nav-tabs">
	<li class="nav-item">
		<a class="nav-link active" href="#">All Claims (@Model.Count)</a>
	</li>
</ul>

<!--Books Table-->
<div class="card">
	<div class="card-body">
		@if (Model.Count < 0)
		{
			<div class="text-muted">
				No claims to be loaded
			</div>
		}
		else
		{
			<table class="table">
				<thead>
					<tr>
						<th>Lecturer Name</th>
						<th>Hours Worked</th>
						<th>Hourly Rate</th>
						<th>Submitted Date</th>
						<th>Status</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var claim in Model)
					{
						<tr>
							<td>@claim.LecturerName</td>
							<td>@claim.HoursWorked</td>
							<td>@claim.HourlyRate</td>
							<td>@claim.SubmittedDate</td>
							<td>
								@if (@claim.Status == _10433939_PROG6212_POE.Models.ClaimStatus.Pending)
								{
									<span class="badge bg-warning">Pending</span>
								}
								else if (@claim.Status == _10433939_PROG6212_POE.Models.ClaimStatus.Verified)
								{
									<span class="badge bg-success">Verified</span>
								}
								else
								{
									<span class="badge bg-danger">Declined</span>
								}
							</td>
							<td>
								<a href="/Coordinator/Review/@claim.Id" class="btn btn-primary">
									@(claim.Status == _10433939_PROG6212_POE.Models.ClaimStatus.Pending ? "Review" : "View")
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		}

	</div>
</div>